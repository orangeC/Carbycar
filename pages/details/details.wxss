/* pages/details/details.wxss */

page {
  width: 100%;
  overflow: hidden;
  background-color: #eaeeef;
}

.container {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  font-family: '黑体';
  color: #747474;
  font-size: 0.8em;
}
.normal{
  width: 100%;
  padding: 25rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #3f3f41;
  font-size: 1.2em;
  background-color: #ebeff0;
}
.flexLeft {
  flex: 0.1;
}

.flexCenter {
  flex: 1.3;
  display: flex;
  flex-direction: column;
}

.flexRight {
  color: #8e8f93;
  flex: 0.1;
}
.blue{
  color: #3089dd;  
}
.black{
  color: #636363;
}
.header {
  width: 100%;
  display: flex;
  padding: 25rpx 30rpx;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.header>view {
  display: flex;
  justify-content: space-between;
  flex: 0.4;
}
.header-text{
  color: #ff722b;
}
.publishTime {
  width: 100%;
  display: flex;
  padding: 25rpx 30rpx;
  margin-top: 15rpx;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
}

.site {
  width: 100%;
  display: flex;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 1.2em;
  background-color: #f8f8f8;
}

.siteLeft {
  display: flex;
}

.siteRight {
  font-size: 0.85em;
}

.siteRight-text {
  font-size: 1.2em;
  color: #fd7028;
}

.tips {
  width: 100%;
  padding: 15rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #3089dd;
  background-color: #fff;
}

.carInfo {
  
}
.carInfoRight{
  font-size: 0.55em;
  font-weight: bold;
}
.carDetail {
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  color: #3f3f41;
  font-size: 1em;
  background-color: #fff;
  border-top: 1px solid #ececec;
}
.carDetail-text{
  padding-top: 8rpx;
  font-size: 0.9em;
  color: #979797;
}
.consignInfo{
  
}
.consignInfoX{
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  color: #989898;
  font-size: 0.9em;
  background-color: #fff;
}
.consignInfoX>text{
  padding-top: 8rpx;
}
.consignInfoX-head{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.consignInfoX-car{
  width: 30%;
  margin-right: 15rpx;
  padding: 8rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #fc7229;
  font-size: 1.3em;
  border: 1px solid #fc7229;
  border-radius: 25px; 
}
.consignInfoX-site{
  padding-top: 8rpx;
}
.consignInfoX-name{
  color: #328bdd;
}
.pricingH{
  width: 100%;
  padding: 15rpx 30rpx;
  display: flex;
  flex-direction: column;
  color: #989898;
  font-size: 0.9em;
  background-color: #fff;
}
.pricingH>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 7rpx 0;
}
.pricingH-topText{
  font-size: 1.2em;
  color: #000;
}
.pricingC>text{
  width: 33%;
}
.pricingC-center{
  text-align: center;
  border-right: 1px solid #eaeeef;
  border-left: 1px solid #eaeeef;
}
.pricingC-right{
  text-align: right;
  font-size: 1em;
  color: #ff7229;
}
.pricingB{
  width: 100%;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
  background-color: #f8f8f8;
  color: #989898;
  font-size: 0.9em;
  box-shadow: 0px 1px 1px #c0c0c0;
}
.pricingB>text{
  color: #727272;
}
.acceptInfoX{
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  color: #989898;
  font-size: 0.9em;
  background-color: #fff;
}
.acceptInfoX>view{
  padding-top: 6rpx;
}
.getCarX{
  width: 100%;
  padding: 0rpx 30rpx;
  display: flex;
  flex-direction: column;
  color: #989898;
  font-size: 0.9em;
  background-color: #fff;
}
.getCarX>view{
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.getCarX text{
  padding-top: 8rpx;
}
.getCarX-header{
  display: flex;
  flex-direction: column;
}
.getCarX-img{
  width: 30px;
  height: 30px;
}
.certificateX{
  width: 100%;
  padding: 30rpx 30rpx;
  display: flex;
  justify-content: space-around;
  color: #989898;
  font-size: 1em;
  background-color: #fff;
}
.certificateX>view{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.certificateX image{
  width: 75px;
  height: 125px;
  border: 1px dashed #d3d3d3;
}
.certificateX text{
  padding-top: 15rpx;
}
.certificateX-circle{
  position: absolute;
  top: -6%;
  right: -8%;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #fc762d;
  text-align: center;
  color: #fff;
  line-height: 20px;
}