/* pages/editpassword/editpassword.wxss */
.userName{
    display: flex;
    align-items: center;
    height: 40px;
    font-size: 1em;
    background-color: #ffffff;
    border-bottom:1px solid #ececec;
}

.userNameText{
    width: 27%;
    padding-left: 3%;
}
.password{
    display: flex;
    align-items: center;
    height: 40px;
    font-size: 1em;
    background-color: #ffffff;
    border-bottom:1px solid #ececec; 
}

.passwordText{
    width: 27%;
    padding-left: 3%;
}

.checkNumber{
    display: flex;
    align-items: center;
    background-color: #ffffff; 
    border-bottom:1px solid #ececec;
}

.checkout{
    display: flex;
    align-items: center;
    height: 40px;
    font-size: 1em;
}

.checkoutText{
    width: 32%;
    padding-left: 5%
}

.getValidCode{
    background-color: #ffffff;
}

.validCodeInput{
    margin-left: 20px;
}

.editPasswordButtonView{
    background-color: #ffffff;
    height: 50px;
    margin-top: 30px;
}
.editPasswordButton{
    display: inline-block;
    background-color: #358cde;
    margin-left: 5%;
    margin-top: 7px;
    width: 90%;
    line-height: 36px;
    border-radius: 18px;
    color: #ffffff;
}

.getValidCode{
    color: deepskyblue;
}