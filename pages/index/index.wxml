<!--index.wxml-->
<view class="order" wx:for="{{apply}}" bindtap="toDetails" id="{{item.Code}}" wx:key="">
  <view class="header">
    <text class="city">{{item.Starting}}→{{item.Ending}}</text>
    <text class="time">{{item.Fromnow}}</text>
  </view>
  <view class="middle">
    <text class="text">要求发车时间:
      <text class="textT">{{item.DepartTime}}</text>
    </text>
    <text class="text">车辆信息:
      <text class="textT">{{item.Car}}</text>
    </text>
    <text class="text">备注:
      <text class="textT">{{item.Remark}}</text>
    </text>
  </view>
  <view class="bottom">
    <view wx:if="{{item.Estimate}}" class="bidding">竞</view>
    <view wx:else class="pricing">定</view>
    <text wx:if="{{item.Estimate}}"></text>
    <view wx:else class="price">¥{{item.Price}}</view>
    <view wx:if="{{item.Estimate}}" class="quoteAmount">{{item.QuoteAmount}}条报价</view>
    <view wx:else class="quoteAmount">{{item.QuoteAmount}}家接单</view>
  </view>
</view>