<!--pages/publish/publish.wxml-->
<view class="title">
    <view><image src="../../pic/火箭.png"></image><text>发布需求</text></view>
    -
    <view><image src="../../pic/钱.png"></image><text>商家报价</text></view>
    -
    <view><image src="../../pic/银行卡.png"></image><text>选择付款</text></view>
    -
    <view><image src="../../pic/车.png"></image><text>提车配送</text></view>
    -
    <view><image src="../../pic/快速收款.png"></image><text>安全送达</text></view>
</view>

<view class="pullOut">
    <view><image src="../../pic/始.png"></image><text bindtap="starting">{{starting.Name}}</text></view>
    <view><image src="../../pic/终.png"></image><text bindtap="ending">{{ending.Name}}</text></view>
</view>

<view class="departTime">
    <view>
        <image src="../../pic/日历.png"></image>
        <picker mode="date" value="{{date}}" start="{{startTime}}" end="" bindchange="bindDateChange">
            <view class="dateInput">{{date}}</view>
        </picker>
    </view>
</view>

<view class="price">
    <view class="prices">
        <view class="{{bidding}}">竞价</view>
        <switch type="switch" color="orange" bindchange="priceChange"/>
        <view class="{{pricing}}">定价</view>
    </view>
    <view>
        <text wx:if="{{offer}}">发布后等待报价</text>
        <input wx:else type="number" placeholder="输入定价，等待接单" focus="true" bindinput="pricing"/>
    </view>
</view>

<view class="detail">
    <view class="carDetail">
        <view wx:for="{{consignCar}}" wx:key="">
            <view>{{item.Brand}}{{item.Style}}</view>
            <view>汽车状态：{{item.NewCar}}/{{item.CanDrive}} 单车估值：{{item.Valuation}}万</view>
            <view>保险：{{item.NeedInsurance}}</view>
        </view>
        <view></view>
    </view>
    <view bindtap="addCar"><image src="../../pic/加号.png"></image><text>添加需要托运的车辆信息</text></view>
</view>

<view class="require"><image src="../../pic/公路运输(1).png"></image>运输要求</view>
<view class="requireDetail">
    <view>
        <switch type="checkbox" bindchange="homeTake"/>上门提车
        <switch type="checkbox" bindchange="needInvoice"/>需要发票
    </view>
</view>
<view wx:if="{{takeCar}}">
    <view bindtap="takeDistrict">请选择提车区域</view>
    <input placeholder="请输入提车地点" bindinput="takeAddress"/>
</view>

<view class="carInfo"><image src="../../pic/发票(3).png"></image>提车信息</view>
<view class="carInfoDet">
    <input placeholder="联系人" bindinput="contactName"/>
    <input placeholder="手机号" bindinput="contactPhone"/>
    <input placeholder="备注" bindinput="remark"/>
</view>

<view><button type="primary" bindtap="submit">发布委托</button></view>