/* pages/status/status.wxss */

page {
  width: 100%;
  overflow: hidden;
  background-color: #fff;
}

.container {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  padding-left: 35rpx;
  padding-right: 50rpx;
  margin-top: 30rpx;
  flex-direction: column;
  font-family: '黑体';
  color: #8c8d91;
  font-size: 0.8em;
}

.main {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 10rpx;
  padding-left: 35rpx;
  padding-bottom: 20rpx;
  border-left: 1px solid #dcdcdc;
  margin-bottom: 20rpx;
  position: relative;
}

.main>text {
  line-height: 1.3;
  margin-top: -30rpx;
}

.main-view {
  padding: 20rpx 0;
}
.footer{
  width: 98%;
  height: 1px;
  background-color: #f6f6f6;
  margin-top: 25rpx;
}
.circle{
  position: absolute;
  width: 8px;
  height: 8px;
  background-color: #dddddd;
  border-radius: 50%;
  top: -5%;
  left: -1.5%;
}
.circleOne{
  position: absolute;
  width: 8px;
  height: 8px;
  background-color: #328ddc;
  border-radius: 50%;
  top: -5%;
  left: -1.5%;
}
.circleOne::after{
  position: absolute;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  content: "";
  background-color: #328ddc;
  border: 4px solid #c2ddf2;
  top: -4px;
  left: -4px;
}