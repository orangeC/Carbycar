/* pages/statuslist/statuslist.wxss */
.order{
    width: 90%;
    height: 200px;
    margin: auto;   
}

.header{
    height: 20%;
    background-color: white;
    border-top-left-radius:10px;
    border-top-right-radius:10px;
    display: flex;
    align-items: center;
    padding-left: 5px;
    margin-top: 10px;
}

.middle{
    height: 60%;
    background-color: white;
    padding-left: 5px;
}

.text{
    display: block;
}

.city{
    width: 50%;
}

.time{
    width: 30%;
    margin-left: 20%
}

.bottom{
    height: 20%;
    border-top: 1px solid #f8f8f8;
    background-color: #f8f8f8;
    border-bottom-left-radius:10px;
    border-bottom-right-radius:10px;
    display: flex;
    align-items: center;
    padding-left: 5px; 
}

.quoteAmount{
    margin-left: 10px;
}

.bidding{
    color: red;
}

.pricing{
    color: blue;
}